red_alliance = rgba(233,45,45,.75)
blue_alliance = rgba(45,45,233,.75)

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-image url("/img/background5.jpg")
  overflow-x hidden



#maintitle
  font-size 70px
  padding-bottom 9px
  padding-top 9px

#outer
  background-color rgba(255,255,255,.5)

.teamnumber
  position relative
  top 30px

#bunny
  position relative
  top -50px

#matchviewtitle
  font-size 100px
  padding-bottom 9px
  padding-top 9px

#progressbar
  background-color rgba(0,0,0,.25)

#creatematch
  border-color #999999
  background-color rgba(221,221,221,.5)
  color #000000
  width 200%
  position relative
  top 100px
  right 700px

.dropdown-toggle.btn-primary 
  color #000000
  background-color rgba(221,221,221,.5)
  border-color #999999


#start
  border-color #999999
  background-color rgba(221,221,221,.5)
  color #329932
  width 200%
  position relative
  top 50px
  right 700px

#reset
  border-color #999999
  background-color rgba(221,221,221,.5)
  color #cc0000
  width 200%
  position relative
  top 54px
  right 700px

#leftcolred
  border-left 7px solid red_alliance
  min-height 200px

#rightcolblue
  border-right 7px solid blue_alliance
  min-height 200px

#scoreleft
  position relative
  left 325px
  font-size 100px

#scoreright
  position relative
  left 100px
  font-size 100px

#foulsleft
  position relative
  left 90px
  font-size 50px

#foulsright
  position relative
  left 300px
  font-size 50px

.glyphicon.glyphicon-plus
  font-size 14px
  left 3px
  top -3px
  color green

.glyphicon.glyphicon-minus
  font-size 14px
  left 3px
  top -3px
  color red_alliance

.progress
  height 50px
